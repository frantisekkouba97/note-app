{% extends 'base.html.twig' %}

{% block title %}Přihlášení{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h1 class="h3 mb-3 text-center">Přihlášení</h1>

                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form method="post" action="{{ path('app_login') }}">
                            <div class="mb-3">
                                <label for="username" class="form-label">Uživatel</label>
                                <input type="text" id="username" name="username" value="{{ last_username }}" required autofocus class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Heslo</label>
                                <input type="password" id="password" name="password" required class="form-control" />
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <button type="submit" class="btn btn-primary w-100">
                                Přihlásit se
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
